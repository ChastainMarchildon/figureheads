<% include partials/header %>
<h1 class=" hero">
    <%= title %>
</h1>


  <div class="container">
        <div class="columns">
                <div class="card" style="width: 20rem;" style="align-items:center;">
              <div class="card-body">
                  <form method="POST">
                      <div class="form-group">
                          <label for="portfolioLink">Portfolio Link</label>
                          <input type="url" id="portfolioLink" name="portfolioLink" class="form-input" value="<%user.portfolioLink%>">
                      </div>
                      <div class="form-group">
                          <label for="instagram">Instagram Link</label>
                          <input type="url" id="instagram" name="instagram" class="form-input" value="<%user.instagramLink%>">
                      </div>

                      <div class="form-group">
                            <label for="category">Category Subsciptions</label>
                                <fieldset>
                                    <select id="category" name="category">
                                    <% var categories =["Wedding","Corporate","Automotive","Cosplay","Portrait","Holidays","Product & Promotional","Social Media","Other"]
                                        for (let i = 0; i < categories.length; i++) { %>
                                        <option value="<%= categories[i] %>"><%= categories[i] %></option>
                                    <% } %>
                                    </select>
                                </fieldset>
                         </div>
                      <button type="submit" class="button">Save Changes</button>
                  </form>
              </div>
          </div>
      </div>
  </div>
  <% include partials/footer %>