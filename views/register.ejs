<% include partials/header %>
    <% if(warning) { %>
        <div class="row flex-spaces">
            <div class="alert alert-danger">
                <%= warning %>
            </div>
        </div>
        <% } %>
            <h1 class=" hero hero-bg-small">
                <%= title %>
            </h1>
        <div class="container">
            <div class="columns">
                    <div class="card" style="width: 20rem;" style="align-items:center;">
                        <div class="card-body">
                            <form method="POST">
                                <div class="form-group">
                                    <label for="username">Email</label>
                                    <input type="email" id="username" name="username" class="form-input" required>
                                </div>
                                <div class="form-group">
                                    <label for="password">Create Password</label>
                                    <input type="password" id="password" name="password" class="form-input" required>
                                </div>
                                <div class="form-group">
                                    <label for="password_confirm">Retype Password above</label>
                                    <input type="password" id="confirm" name="confirm" class="form-input" required>
                                </div>
                                <button type="submit" class="btn-secondary btn-block">Create my Account</button>
                            </form>
                        </div>
                        <div class="card-footer">Already have an account?
                            <a href="/login">Login</a>
                        </div>
                    </div>
            </div>
        </div>
            <% include partials/footer %>