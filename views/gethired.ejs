<% include partials/header %>
    <% if(warning) { %>
        <div class="row flex-spaces">
            <div class="alert alert-danger">
                <%= warning %>
            </div>
        </div>
        <% } %>
            <h1 class=" hero hero-bg-small">
                <%= title %>
            </h1>
        <div class="container">
            <div class="columns">
                    <div class="card" style="width: 20rem;" style="align-items:center;">
                        <div class="card-body">
                            <form method="POST">

                                <div class="form-group">
                                    <label for="name">Name</label>
                                    <input type="text" id="name" name="name" class="form-input" required>
                                </div>

                                <div class="form-group">
                                        <label for="portfoliolink">Portfolio Link (Optional)</label>
                                        <input type="url" id="portfolio" name="portfolio" class="form-input">
                                </div>

                                <div class="form-group">
                                    <label for="username">Email</label>
                                    <input type="email" id="username" name="username" class="form-input" required>
                                </div>

                                <div class="form-group">
                                    <label for="password">Create Password</label>
                                    <input type="password" id="password" name="password" class="form-input" required>
                                </div>
                                <div class="form-group">
                                    <label for="password_confirm">Retype Password above</label>
                                    <input type="password" id="confirm" name="confirm" class="form-input" required>
                                </div>

                                <div class="form-group">
                                    <input type="text" id="photographer" name="photographer" value="Yes" style="visibility:hidden" required>
                                </div>
                                <button type="submit" class="button button-small">Create my Account</button>
                            </form>

                        </div>
                        <div class="card-footer">Already have an account?
                            <a href="/login">Login</a>
                            <button
  style="background-color:#6772E5;color:#FFF;padding:8px 12px;border:0;border-radius:4px;font-size:1em"
  id="checkout-button-plan_F99sURKqZZKMVs"
  role="link"
  onclick="stripeCheckout()"
>
  Checkout
</button>
                        </div>
                    </div>
            </div>
        </div>
<% include partials/footer %>